# Database
DATABASE_URL="postgresql://user:password@localhost:5432/scotcomply?schema=public"

# NextAuth
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# Email (Resend)
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="noreply@scotcomply.com"

# SMS (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-twilio-phone-number"

# File Storage (AWS S3 or Cloudflare R2)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="eu-west-2"
AWS_S3_BUCKET="scotcomply-documents"

# AML Screening (ComplyAdvantage)
COMPLY_ADVANTAGE_API_KEY="your-complyadvantage-api-key"
COMPLY_ADVANTAGE_FUZZINESS="0.8"

# App Settings
NODE_ENV="development"
APP_NAME="ScotComply"
APP_URL="http://localhost:3000"
